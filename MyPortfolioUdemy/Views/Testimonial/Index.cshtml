@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container-fluid">
    <h3>Referanslarım</h3>
    <div class="card">
        <div class="card-body">
            <div class="card-sub">
               Referanslar
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                       
                        <th scope="col">AdSoyad</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Link</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameSurname</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.ImageUrl</td>

                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Testimonial/CreateTestimonial/" class="btn btn-primary">Referans Ekle</a>
        </div>
    </div>
</div>
